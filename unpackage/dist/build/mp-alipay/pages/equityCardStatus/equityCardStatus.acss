.card-status{background:#f6f7f7;width:750rpx;min-height:100vh;padding:32rpx 24rpx;box-sizing:border-box}.card-status .info{background:#fff;border-radius:12rpx;padding:58rpx 36rpx 36rpx}.card-status .info .name{font-size:40rpx;color:#333;line-height:56rpx;margin-bottom:16rpx}.card-status .info .name .icon{display:inline-block;width:44rpx;height:44rpx;background:url(/common/images/success.png) no-repeat;background-size:100%;margin-right:16rpx;vertical-align:middle}.card-status .info .name .icon.fail{background:url(/common/images/fail.png) no-repeat;background-size:100%}.card-status .info .tips{font-size:24rpx;color:#666;line-height:34rpx}.card-status .info .item{height:104rpx;line-height:104rpx;border-bottom:2rpx solid #f3f3f3;color:#666;font-size:28rpx}.card-status .info .item:last-child{border-bottom:none}.card-status .info .item text{color:#333;float:right}.card-status .pay-btn{width:702rpx;height:96rpx;background:-webkit-linear-gradient(top,#fde2a4,#b28a4b);background:linear-gradient(180deg,#fde2a4,#b28a4b);border-radius:48rpx;font-size:36rpx;color:#331308;margin-top:200rpx}