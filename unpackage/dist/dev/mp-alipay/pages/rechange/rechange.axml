<view class="rechange-bg"><block a:if="{{banner&&banner[0]}}"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><block a:for="{{banner}}" a:for-item="item" a:for-index="index" a:key="index"><swiper-item><view data-event-opts="{{[['tap',[['toBanner',['$0'],[[['banner','',index]]]]]]]}}" class="swiper-item" onTap="__e"><image class="img" src="{{item.bannerUrl}}"></image></view></swiper-item></block></swiper></block><block a:else><image class="swiper" mode="scaleToFill" src="https://fulu-mall.oss-cn-hangzhou.aliyuncs.com/ed8b5f9c0b8f4c0e9d9aeafe8c733ad5.png"></image></block><view class="recharge-goods"><view class="vild-code" a:if="!isCheck"><view class="v-title">兑换码<image class="clear-code" mode="scaleToFill" src="https://fulu-mall.oss-cn-hangzhou.aliyuncs.com/0c6363fda23945fca4f7a16baed51e54.png" data-event-opts="{{[['tap',[['clearCode',['$event']]]]]}}" onTap="__e"></image></view><view class="input-bg"><input class="code-input" data-tab="1" data-event-opts="{{[['blur',[['changeCode',['$event']]]]]}}" value="{{code1}}" onBlur="__e"/><input class="code-input" data-tab="2" data-event-opts="{{[['blur',[['changeCode',['$event']]]]]}}" value="{{code2}}" onBlur="__e"/><input class="code-input" data-tab="3" data-event-opts="{{[['blur',[['changeCode',['$event']]]]]}}" value="{{code3}}" onBlur="__e"/><input class="code-input" data-tab="4" data-event-opts="{{[['blur',[['changeCode',['$event']]]]]}}" value="{{code4}}" onBlur="__e"/></view><button class="{{(!code1||isLoading?'sub-btn disabled-btn':'sub-btn')}}" type="primary" disabled="{{!code1||isLoading}}" data-event-opts="{{[['tap',[['toChange',['$event']]]]]}}" onTap="__e">立即验证</button></view></view></view>