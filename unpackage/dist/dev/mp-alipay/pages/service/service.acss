.server-bg {
  min-height: 100vh;
  background: #f6f6f6;
}
.server-bg .user-info {
  box-sizing: border-box;
  width: 750rpx;
  background: #3162f5;
  color: #fff;
  text-align: center;
  padding: 0rpx 35rpx 0;
  height: 300rpx;
  margin-bottom: 30rpx;
}
.server-bg .user-info image {
  width: 135rpx;
  height: 135rpx;
  border: 3rpx solid #fff;
  background-size: 100%;
  margin: 0 auto 20rpx;
  border-radius: 50%;
}
.server-bg .user-info .nickName {
  height: 33rpx;
  font-size: 44rpx;
  color: #ffffff;
  margin-bottom: 50rpx;
}
.server-bg .user-info .small {
  font-size: 24rpx;
}
.server-bg .server-list .item {
  width: 690rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  padding: 30rpx 40rpx;
}
.server-bg .server-list .item .h2 {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.server-bg .server-list .item .h4 {
  font-size: 24rpx;
  color: #666;
}
.server-bg .last-gray {
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 50rpx;
  height: 20rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #c2c2c2;
  text-align: center;
}
.server-bg .last-gray .line {
  display: inline;
  padding: 0 18rpx;
}

