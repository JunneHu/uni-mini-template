view,
text {
  box-sizing: border-box;
  font-size: 28rpx;
}
.my-card {
  background: #171717;
  width: 750rpx;
  min-height: 100vh;
  padding: 40rpx 34rpx 40rpx 38rpx;
}
.my-card .item {
  width: 678rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  background: url('https://fulu-mall.oss-cn-hangzhou.aliyuncs.com/f4fb1438e37a4172a0e9249190865df5.png');
  background-size: 100%;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.5), 0 4rpx 28rpx 0 rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  padding: 28rpx 40rpx;
  position: relative;
}
.my-card .item.unActive {
  background: url('https://fulu-mall.oss-cn-hangzhou.aliyuncs.com/dc57034b5a7041c5a46d194c54317382.png');
  background-size: 100%;
}
.my-card .item .h1 {
  margin: 0;
  font-size: 48rpx;
  font-weight: 500;
  color: #453215;
  line-height: 66rpx;
}
.my-card .item .time {
  color: #453215;
  line-height: 40rpx;
  position: absolute;
  bottom: 28rpx;
  left: 40rpx;
}

