input {
  text-align: left !important;
}
.my-bg {
  min-height: 100vh;
  background: #F6F6F6;
  width: 100%;
  text-align: center;
}
.my-bg .user-info {
  box-sizing: border-box;
  width: 100%;
  background: #3162F5;
  position: relative;
  z-index: 2;
  color: #fff;
  text-align: center;
  padding: 0 35rpx 0;
  height: 300rpx;
}
.my-bg .user-info .img {
  width: 135rpx;
  height: 135rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  background-size: 100%;
  margin: 0 auto 30rpx;
  display: block;
}
.my-bg .user-info .h1 {
  font-size: 30rpx;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}
.my-bg .login-bg {
  display: block;
  width: 686rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 5rpx;
  padding: 100rpx 32rpx;
  box-sizing: border-box;
  z-index: 9;
  position: relative;
  top: -40rpx;
}
.my-bg .login-bg .page-section {
  margin-bottom: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border-radius: 5rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}
.my-bg .login-bg .page-section .se-input {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  background: #fff;
  width: 100%;
  color: #333;
  font-size: 32rpx;
}
.my-bg .login-bg .page-section .se-input .uni-input-placeholder {
  text-align: left !important;
  padding-left: 20rpx;
}
.my-bg .login-bg .page-section .code-btn {
  position: absolute;
  right: 2rpx;
  top: 2rpx;
  z-index: 3;
  color: #3162F5;
  cursor: pointer;
  padding: 0 40rpx;
  font-size: 28rpx;
}
.my-bg .login-bg .login-btn {
  width: 100%;
  height: 88rpx;
  background: #3162F5;
  color: #fff;
  border: none;
  font-size: 32rpx;
}
.my-bg .last-gray {
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 50rpx;
  height: 20rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #c2c2c2;
}
.my-bg .last-gray .line {
  display: inline;
  padding: 0 18rpx;
}

